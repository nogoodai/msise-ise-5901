  filename      = "lambda_function_payload.zip"
  function_name = "${var.project_name}-${var.environment}-get-item-function"
  handler       = "index.handler"
  runtime       = "nodejs12.x"
  role          = aws_iam_role.lambda_role.arn
  memory_size   = 1024
