# Amplify App
resource "aws_amplify_app" "this" {
  name        = "${var.project_name}-${var.environment}"
  description = "Amplify app for ${var.project_name} ${var.environment}"
}

resource "aws_amplify_branch" "this" {
  app_id      = aws_amplify_app.this.id
